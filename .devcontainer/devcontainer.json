{
    "name": "NetAutoberfest",
    "image": "ghcr.io/floehden/netautoberfest:0.1",
    "features": {
         "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "26.1.5",
            "dockerDashComposeVersion": "none"
        },
        // Add sshd to support gh cli codespace cp.
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "remoteUser": "vscode",
    "customizations": {
        "vscode": {
           "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": { 
                        "path": "/bin/zsh"
                    }
                },
                "terminal.integrated.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, Cascadia Code, Consolas, Courier New, monospace"
            },
            "extensions": [
                // Python.
                "ms-python.python",
                "ms-python.vscode-pylance",
                // containerlab
                "srl-labs.vscode-containerlab"
            ]
        }
    },
    "postCreateCommand": "bash /root/postCreate.sh",
    "workspaceFolder": "/home/vscode"
}